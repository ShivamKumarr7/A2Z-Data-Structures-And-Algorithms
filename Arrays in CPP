// Arrays in CPP 

// Array is a data structure which consists of data types of similar types.
// Its elements are contiguous in nature.
// The size of array should be mentioned while declaring it.
// Array index starts from 0.

#include<bits/stdc++.h>
using namespace std;
void print(int arr[],int size)
{
    for(int i=0;i<size;i++)
    {
        cout<<arr[i]<<" ";
    }
    cout<<"\n";
}
int main()
{
    int arr[3] = {1,2,3};
    int brr[5] = {0};
    int size_of_arr = sizeof(arr)/sizeof(arr[0]);
    int size_of_brr = sizeof(brr)/sizeof(brr[0]);
    print(arr,size_of_arr);
    print(brr,size_of_brr);
    return 0;
}
