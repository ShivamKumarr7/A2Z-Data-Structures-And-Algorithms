// Sum of first 'n' natural numbers using recursion 

#include<bits/stdc++.h>
using namespace std;
int sum_of_natural_numbers(int n)
{
    if(n == 0)return 0;
    return n + sum_of_natural_numbers(n-1);
}
int main()
{
    int n;
    cin>>n;
    int ans = sum_of_natural_numbers(n);
    cout<<ans<<"\n";
    return 0;
}
