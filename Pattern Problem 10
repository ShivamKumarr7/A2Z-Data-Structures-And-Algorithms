// Pattern Problem 10

#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    int length = n;
    int breadth = (2*n) - 1;
    for(int i=1;i<=n;i++)
    {
        for(int j=1;j<=i;j++)
        {
            cout<<"*"<<" ";
        }
        cout<<"\n";
    }
    for(int i=1;i<n;i++)
    {
        for(int j=1;j<=(n-i);j++)
        {
            cout<<"*"<<" ";
        }
        cout<<"\n";
    }
    return 0;
}
